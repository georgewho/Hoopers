<body>
	<!-- header/nav bar top -->
	<nav class="navbar fixed-top navbar-expand navbar-light" style="background-color:#e8e8e8">
		<div class="navbar-collapse collapse" id="headerText">
			<span class="navbar-brand">
				Games Near You
			</span>
		</div>
	</nav>

	<!-- nav bar bottom -->
	<nav class="navbar fixed-bottom navbar-expand navbar-light" style="background-color:#e8e8e8">
		<div class="container">
			<div class="navbar-collapse collapse" id="homeNav">
				<ul class="navbar-nav nav-fill w-100">
					<li class="nav-item text-center">
						<a class="nav-link active" href="/home"><div><i class="fas fa-map-marker-alt"></i></div></a>
					</li>
					<li class="nav-item text-center">
						<a class="nav-link" href="/savedgames"><div><i class="fas fa-basketball-ball"></i></div></a>
					</li>
					<li class="nav-item text-center">
						<a class="nav-link" href="/mystats"><div><i class="far fa-chart-bar"></i></div></a>
					</li>
					<li class="nav-item text-center">
						<a class="nav-link" href="/friends"><div><i class="fas fa-user-friends"></i></div></a>
					</li>
					<li class="nav-item text-center">
						<a class="nav-link" href="/account"><div><i class="fas fa-user-circle"></i></div></a>
					</li>
				</ul>
			</div>
		</div>
	</nav>


	<!-- game listings -->
	<div class="container-fluid gamelist">

		<a href="/viewgames">
			<div class="game" id="game1">
				<div class="row">
					<div class="col-8">
						<h3 class="gamename">Hoop With Me </h3>
					</div>
					<div class="col-4">
						<h5 class="distance">0.4 mi</h5>
					</div>
				</div>
				<h5>4:00 PM &emsp; 2/15/19</h5>
				<h5>Beginner &emsp; 4v4</h5>
				<img src="/images/game1.png" alt="game1">
			</div>
		</a>

		<a href="/viewgames">
			<div class="game" id="game2">
				<div class="row">
					<div class="col-8">
						<h3 class="gamename">Pro Game </h3>
					</div>
					<div class="col-4">
						<h5 class="distance">1.2 mi</h5>
					</div>
				</div>
				<h5>10:00 PM &emsp; 2/15/19</h5>
				<h5>Advanced &emsp; 10v10</h5>
				<img src="/images/game2.png" alt="game2">
			</div>
		</a>

		<a href="/viewgames">
			<div class="game" id="game3">
				<div class="row">
					<div class="col-8">
						<h3 class="gamename">Chilling </h3>
					</div>
					<div class="col-4">
						<h5 class="distance">3.2 mi</h5>
					</div>
				</div>
				<h5>10:30 AM &emsp; 2/16/19</h5>
				<h5>Intermediate &emsp; Unlimited</h5>
				<img src="/images/game2.png" alt="game3">
			</div>
		</a>
	</div>

	<!--JS Bootstrap -->
	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
		integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
		crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"
